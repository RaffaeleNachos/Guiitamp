<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="260dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/side_menu_color"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/close_side_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_baseline_arrow_back"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical"
                    android:background="#0000"/>

                <LinearLayout
                    android:id="@+id/menu_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/cabin"
                        android:text="@string/header_title"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        android:textColor="@color/top_main_bar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/cabin"
                        android:text="@string/header_text"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/top_main_bar_light"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin"
                android:orientation="vertical"
                android:weightSum="9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_header">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/cabin"
                    android:text="@string/input"
                    android:layout_marginStart="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/top_main_bar_light"/>

                <com.example.giribasicamplifier.AudioDeviceSpinner
                    android:id="@+id/inputSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.7"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/cabin"
                    android:text="@string/output"
                    android:layout_marginStart="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/top_main_bar_light"/>

                <com.example.giribasicamplifier.AudioDeviceSpinner
                    android:id="@+id/outputSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/cabin"
                    android:text="@string/audio_driver"
                    android:layout_marginStart="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/top_main_bar_light"/>

                <RadioGroup
                    android:id="@+id/radioContainer"
                    android:layout_width="250dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginStart="10dp">

                    <RadioButton
                        android:id="@+id/openSLES"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OpenSL ES"
                        android:textColor="@color/top_main_bar_light"/>

                    <RadioButton
                        android:id="@+id/aaudio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AAudio"
                        android:textColor="@color/top_main_bar_light"/>
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/cabin"
                android:text="@string/tutorial"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/top_main_bar_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:fontFamily="@font/cabin"
                android:text="embedded YouTube Video (TODO)"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/top_main_bar_light"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>