<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/knobs_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/led"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/led_off" />

        <Space
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"/>

        <it.beppi.knoblibrary.Knob
            android:id="@+id/knob_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:visibility="gone"

            app:kFreeRotation="false"
            app:kKnobColor="@color/pedalboard_dark"
            app:kMaxAngle="130"
            app:kMinAngle="-130"
            app:kStateMarkersColor="@color/white" />

        <Space
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"/>

        <it.beppi.knoblibrary.Knob
            android:id="@+id/knob_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:visibility="gone"

            app:kFreeRotation="false"
            app:kKnobColor="@color/pedalboard_dark"
            app:kMaxAngle="130"
            app:kMinAngle="-130"
            app:kStateMarkersColor="@color/white" />

        <Space
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"/>

        <it.beppi.knoblibrary.Knob
            android:id="@+id/knob_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:visibility="gone"

            app:kFreeRotation="false"
            app:kKnobColor="@color/pedalboard_dark"
            app:kMaxAngle="130"
            app:kMinAngle="-130"
            app:kStateMarkersColor="@color/white" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>